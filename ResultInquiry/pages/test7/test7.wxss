/* pages/test/test.wxss */

.container {
  background: #000;
  margin: 0;
  padding: 0;
  background-color: black;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url(https://rb.sunlands.com/images/ResultInquiryImages/TestPage1.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.answer-title {
  width: 512rpx;
  height: 136rpx;

}

.answer-title-text {
 width: 241rpx;
  height: 51rpx;
  position: absolute;
  top: 15%;
  left: 10%;
}

.answer-item {
  width: 502rpx;
  height: 78rpx;
  position: absolute;
  top: 42%;
  left: 17.5%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
    border-radius: 12px;

}

.answer-item-text {
  width: 494rpx;
  height: 55rpx;
    margin-top: 6rpx;

}

/* B */

.answer-item:nth-child(3) {
  position: absolute;
  top: 55%;
}

.answer-item:nth-child(3)> .answer-item-text {
  width: 445rpx;
  height: 39rpx;
}

/* C */

.answer-item:nth-child(4) {
  position: absolute;
  top: 68%;
}

.answer-item:nth-child(4)> .answer-item-text {
  width: 305rpx;
  height: 45rpx;
}

.answer-item.active {
  background: #74b4b5;
}

.answer-item-border {
  width: 502rpx;
  height: inherit;
  position: absolute;
  left: 0;
  top: 0;
}

.button {
  width: 502rpx;
  height: 77rpx;
  position: absolute;
  bottom: 13%;
  left: 17.5%;
}
